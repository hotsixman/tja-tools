{
    "compilerOptions": {
        "module": "ESNext",
        "moduleResolution": "bundler",
        "target": "ESNext",
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strict": true,
        "sourceMap": true,
        "allowImportingTsExtensions": false,
        "verbatimModuleSyntax": true
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}